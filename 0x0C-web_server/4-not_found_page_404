#!/usr/bin/env bash

# Create the Nginx configuration file
config_file="/etc/nginx/sites-available/4-not_found_page_404"
sudo touch "$config_file"

# Define the content for the Nginx configuration file
config_content="server {
    listen 80 default_server;
    listen [::]:80 default_server;
    
    # SSL configuration
    #
    # listen 443 ssl default_server;
    # listen [::]:443 ssl default_server;
    #
    # Note: You should disable gzip for SSL traffic.
    # See: https://bugs.debian.org/773332
    #
    # Read up on ssl_ciphers to ensure a secure configuration.
    # See: https://bugs.debian.org/765782
    #
    # Self-signed certs generated by the ssl-cert package
    # Don't use them in a production server!
    #
    # include snippets/snakeoil.conf;
    
    root /var/www/html;
    
    # Custom 404 error page
    error_page 404 /404.html;
    location = /404.html {
        root /usr/share/nginx/html;
        internal;
    }
}"

# Write the configuration content to the Nginx configuration file
echo "$config_content" | sudo tee "$config_file" > /dev/null

# Create the custom 404 page with the content "Ceci n'est pas une page"
custom_404_content="Ceci n'est pas une page"
echo "$custom_404_content" | sudo tee /usr/share/nginx/html/404.html > /dev/null

# Create a symbolic link to enable the configuration
sudo ln -s "$config_file" "/etc/nginx/sites-enabled/"

# Test the Nginx configuration for syntax errors
sudo nginx -t

# Restart Nginx to apply the changes
sudo service nginx restart

